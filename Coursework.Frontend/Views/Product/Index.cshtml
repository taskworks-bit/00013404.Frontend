@model IEnumerable<Product> 

@{
ViewData["Title"] = "Product List";
}

<h1>Products</h1>

<p>
  <a asp-action="Create" class="btn-warning btn-sm">Create</a>
</p>

<table class="table">
  <thead>
  <tr>
    <th>Product ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  @foreach (var product in Model)
  {
  <tr>
    <td>@product.Id</td>
    <td>@product.Name</td>
    <td>@product.Price</td>
    <td>@product.Quantity</td>
    <td>
      <a asp-action="Details" class="btn btn-secondary btn-sm" asp-route-id="@product.Id">View</a> |
      <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@product.Id">Edit</a> |
      <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@product.Id">Delete</a>
    </td>
  </tr>
  }
  </tbody>
</table>
